{
  "name": "dls-language",
  "displayName": "DLS Language Support",
  "description": "Syntax highlighting and basic support for DLS files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:dls"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dls",
        "aliases": [
          "DLS",
          "dls"
        ],
        "extensions": [
          ".dls"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dls",
        "scopeName": "source.dls",
        "path": "./syntaxes/dls.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.5"
  }
}
